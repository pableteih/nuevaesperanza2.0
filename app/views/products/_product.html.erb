<table class="table">

  <tbody>
    <tr>
      <td>Archivos adjuntos</td>
      <td>
          <% if product.files.any? %>
            <% product.files.each do |file| %>
            <li>
              <%= link_to file.filename, rails_blob_path(file, disposition: "attachment") %>
            </li>
            <% end %>
          <%end%>
      </td>
    </tr>
    <tr>
      <td>Cantidad</td>
      <td><%= product.quantity %></td>
    </tr>
    <tr>
      <td>Tipo</td>
      <td><%= product.type.name %></td>
    </tr>
    <tr>
      <td>Composici√≥n</td>
      <td><%= product.composition.name %></td>
    </tr>
    <tr>
      <td>Localidad</td>
      <td><%= product.locality.name %></td>
    </tr>
    <tr>
      <td>Cliente</td>
      <td><%= "#{product.client.name} #{product.client.lastName}" if product.client.name && product.client.lastName%>
      </td>
    </tr>
  </tbody>
</table>