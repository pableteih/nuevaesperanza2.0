<p style="color: green"><%= notice %></p>

<div class="container">
<h1>Cotizaciones de venta</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Fecha</th>
        <th>Tel√©fono</th>
        <th>Correo</th>
        <th>Localidad</th>
        <th>Contenido</th>
        <th>Vista</th>
      </tr>
    <tbody>
      <tr>
      <% @sells.order(created_at: :desc).each do |sell| %>
        <td><%= sell.name %></td>
        <td><%= sell.lastName %></td>
        <td><%= sell.created_at %></td>        
        <td><%= sell.phone %></td>
        <td><%= sell.email %></td>
        <td><%= sell.locality.name %></td>
        <td><%= sell.content %></td>
        <td><%= link_to "Ver", sell, class: "btn btn-outline-secondary" %></td>
      </tr>
      <%end%>
    </tbody>
  </table>
</div>

