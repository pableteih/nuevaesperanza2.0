<div class="container">
  <p style="color: green"><%= notice %></p>
  <div id="contacts">
    <h1>Cotizaciones</h1>
    <table class="table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Fecha</th>
          <th>Teléfono</th>
          <th>Correo</th>
          <th>Contenido</th>
          <th>Localidad</th>
          <th>Publicación</th>
          <th>Vista</th>

        </tr>
      </thead>
      <tbody>
        <% @contacts.order(created_at: :desc).each do |contact| %>

        <tr>
          <td><%= "#{contact.name} #{contact.lastName}" if contact.name && contact.lastName %></td>
          <td><%= contact.created_at %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.email %></td>
          <td><%= contact.content %></td>
          <td><%= contact.locality.name %></td>
          <td><%= contact.publication.id %></td>       
          <td><%= link_to "Ver", contact, class: "btn btn-outline-secondary" %></td>
        </tr>

        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "Exportar", export_contacts_path(format: :csv), class: "btn btn-outline-secondary" %>
</div>
